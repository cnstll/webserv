server {
  listen 0.0.0.0:18000;
  root ./forest/iAmRoot;
  error_pages_dir ./forest/iAmErrorDir;
  server_name gaufrierMagique;

  location /hash.py {
    root ./forest/cgi;
    client_max_body_size 100;
  }

  location /upload_resource.py {
    root ./forest/cgi;
    working_dir ./forest/iAmUploadDir;
    methods POST;
  }

  location /favicon.ico {
    root ./forest/favicon;
  }

  location /directory {
    autoindex off;
    root ./forest/iAmRoot/;
  }

  location /ottoindex {
    autoindex on;
    root ./forest/iAmRoot/;
  }

  location /redirect {
    return 302 /hash.html;
  }

  location /redirect2 {
    return 301 /hash.html;
  }

}

server {
  listen 0.0.0.0:18001;
  server_name webserv;
  root ./core/server_root;

  location /hash.py {
    root ./forest/cgi;
  }
}